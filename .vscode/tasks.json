{
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/local/bin/g++",
      "args": [
        "-g",
        "${file}"
        // "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/local/bin"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build before debug",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${fileDirname}/${fileBasenameNoExtension}.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
